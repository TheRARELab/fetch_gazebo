<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <env name="GAZEBO_MASTER_URI" value="http://localhost:11346" />
  <!-- Define the physical world for fetch2 -->
  <arg name="world_name" default="$(find fetchit_challenge)/worlds/nec0115a_arena_virtual_virtual.world"/>
  <arg name="paused" default="false"/>
  <arg name="verbose" default="true"/>
  <arg name="physics" default="ode"/>

  <!-- Launch Gazebo with the specified physical world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(arg world_name)"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="verbose" value="$(arg verbose)"/>
    <arg name="physics" value="$(arg physics)"/>
  </include>

  <!-- Launch the fetch2 robot in the physical environment -->
  <include file="$(find fetchit_challenge)/launch/fetch_robot_spawn.launch">
    <arg name="x" value="0.0" />
    <arg name="y" value="0.0" />
    <arg name="z" value="0.0" />
    <arg name="yaw" value="0.0" />
    <arg name="robot" value="fetch"/>
  </include>

</launch>
